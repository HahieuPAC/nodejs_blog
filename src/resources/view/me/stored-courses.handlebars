<div class='mt-4'>
    <h3>Khoa hoc cua toi</h3>

    <table class='table'>
        <thead>
            <tr>
                <th scope='col'>ten khoa hoc</th>
                <th scope='col'>trinh do</th>
                <th></th>
                <th scope='col'>link anh</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope='row'>{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.image}}</td>
                    <td>
                        <a
                            href='/course/{{this._id}}/edit'
                            class='btn btn-link'
                        >sua</a>
                        <a
                            href=''
                            class='btn btn-link'
                            data-toggle='modal'
                            data-target='#del-course-modal'
                            data-id="{{this._id}}"
                        >xoa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{! Confirm }}

<div id='del-course-modal' class='modal' tabindex='-1' role='dialog'>
    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title'>Modal title</h5>
                <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                >
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                <p>Ban chac chan muonn xoa khoa hoc nay?</p>
            </div>
            <div class='modal-footer'>
                <button type='button' class='btn btn-danger' data-target="#del-couse-modal">Xoa bo</button>
                <button
                    type='button'
                    class='btn btn-secondary'
                    data-dismiss='modal'
                >Huy</button>
            </div>
        </div>
    </div>
</div>